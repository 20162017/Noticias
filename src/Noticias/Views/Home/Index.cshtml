@model Noticias.Models.HomeViewModels.IndexViewModel
@{
    ViewData["Title"] = "Início";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @for (int i = 1; i <  Model.Banner.Count(); i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i"></li>
        }       
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Banner.jpg" alt="Noticias do Mundo" class="img-responsive" />
            <div class="carousel-caption" role="option">
                              
            </div>
        </div>
        @foreach (var item in Model.Banner)
        {
            <div class="item">
                <a href="#">
                <img src="~/images/@item.Id-Banner.jpg" alt="@item.Titulo" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                       
                                               
                    </div>
                 </a>
             </div>  
        }      
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-9">
        <h2>Ultimas notícias</h2>

        @foreach (var item in Model.UltimasNoticias)
        {
            <article>
                <h4>@item.Titulo</h4>
                <p>Publicado em @item.DataPublicacao.Value.ToString("dddd, d  'de'  yyyy, 'as' HH:mm"), por @item.Autor</p>
                <p>@Html.Raw(item.Corpo)</p>
            </article>
            <hr />

        }
               
    </div>
    <div class="col-md-3">
        <h2>Sites de notícia</h2>
        <ul>
            <!--
            foreach (var item in Model.Categorias)
            {
                <li><a href="#">item.Destaque</a></li>

            }-->

            <li><a href="http://www.estadao.com.br/">Estadão</a></li>
            <li><a href="https://www.r7.com/">R7 Noticias</a></li>
            <li><a href="https://www.folha.uol.com.br/">Folha de S. Paulo</a></li>
            <li><a href="https://noticias.uol.com.br/">Uol Notícias</a></li>
            <li><a href="https://www.terra.com.br/noticias/">Terra Noticias</a></li>
            <li><a href="http://g1.globo.com/">G1</a></li>

        </ul>
    </div>
</div>