@model Noticias.Models.NoticiasViewModel.NoticiaViewModel


@{
    ViewData["Title"] = "Editar Noticia";
}

<h2>@ViewData["Title"]</h2>

<h4>Informe os dados da Noticia</h4>
<hr />

<form asp-action="Edit" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Titulo" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Corpo" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Corpo" class="form-control" />
            <span asp-validation-for="Corpo" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DataPublicacao" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="DataPublicacao" class="form-control" />
            <span asp-validation-for="DataPublicacao" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Autor" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Autor" class="form-control" />
            <span asp-validation-for="Autor" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="CategoriaId" class="form-control" />
            <span asp-validation-for="CategoriaId" class="text-danger" />
        </div>
    </div>
  
    <div class="form-group">
        <div class="col-md-offset-2  col-md-10">
            <input type="submit" value="Adicionar" class="btn btn-info" />
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Voltar a lista de noticias</a>
</div>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}